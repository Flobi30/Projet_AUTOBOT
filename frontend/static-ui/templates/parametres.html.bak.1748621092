            border-bottom: 1px solid var(--border-color);
            padding-bottom: 10px;
        }
        
        .api-key-card .input-group {
            margin-bottom: 0;
        }
        
        .save-button-container {
            display: flex;
            justify-content: flex-end;
            margin-top: 30px;
        }
        
